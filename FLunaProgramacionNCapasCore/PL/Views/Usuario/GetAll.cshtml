@model ML.Usuario
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuario</h2>


<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un Usuario para editarlo o + para agregar...</h5>
        <hr />
    </div>
</div>


@*<div class ="row">*@
<div style="float:right;">
    @Html.ActionLink("+", "Form", "Usuario", htmlAttributes: new {@class = "btn btn-success"})   

</div>

<br />

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="visually-hidden">IdUsuario</td>
            <td>Nombre</td>

            <td >Sexo</td>
            <td>Email</td>
            <td >FechaDeNacimiento</td>
            <td>Telefono</td>
            <td >Celuar</td>
            <td>Curp</td>
            <td>UserName</td>
            <td class="visually-hidden">Contrasenia</td>
            <td class="visually-hidden">IdRol</td>
            <td>Rol</td>
            <td>Imagen</td>

            <td>Eliminar</td>
        </tr>

  </thead>
     <tbody>
          @foreach (ML.Usuario usuario in Model.Usuarios)
           {
                <tr>
                   
                    <td><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Usuario", new {IdUsuario = usuario.IdUsuario})"></a></td>
                    <td class="visually-hidden">@usuario.IdUsuario</td>
                    <td>
                        @usuario.Nombre
                        @usuario.ApellidoPaterno
                        @usuario.ApellidoMaterno
                    </td>
                   
                    <td>@usuario.Sexo</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.FechaNacimiento</td>
                    <td>@usuario.Telefono</td>
                    <td>@usuario.Celular</td>
                    <td>@usuario.Curp</td>
                    <td>@usuario.UserName</td>
                    <td class="visually-hidden">@usuario.Constrasenia</td>
                  <td class="visually-hidden">@usuario.Rol.IdRol</td>
                    <td>@usuario.Rol.Nombre</td>
                    <td>@usuario.Imagen</td>

                  <td>
                        @if(usuario.Imagen == null)
                        {
                            <img src="~/Imagenes/UsuarioSinImagen.png" style="width:80px; height:40px" />
                        }
                       else
                       {
                            <img src="data:image/*;base64,@usuario.Imagen" style="width:75px; height:35px" />
                       }
                  </td>

                    <td>
                        <a class="btn btn-danger bi bi-trash2" href="@Url.Action("Delete", "Usuario", new {IdUsuario = usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');">   </a>
                    </td>

               </tr>

          }

  </tbody>

</table>


